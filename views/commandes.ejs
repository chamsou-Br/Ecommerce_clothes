  <head>
    <meta charset="UTF-8" />
    <meta charset="ISO-8859-1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ecommerce</title>
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/styles/home.css" />
    <link rel="stylesheet" href="/styles/gerant.css" />
    <link rel="stylesheet" href="/styles/shared.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="//fonts.googleapis.com/css?family=Josefin+Sans"
    />
    <style>
      body {
        font-family: "Josefin Sans";
      }
    </style>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <div class="nav-small-screen">
      <!-- ======= Navbar ======= -->
        <%- include("components/navGerant") %>
      <!-- ======= End navbar ======= -->
    </div>
    <div id="viewport">
      <!-- ======= Navbar ======= -->
      <%- include("components/sidebar") %>
      <!-- ======= End navbar ======= -->
      <!-- Content -->
      <div id="content">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/">L'atelier de la Mode</a></li>
            </ul>
          </div>
        </nav>
        <div class="container-fluid">
          <!-- ======= Commend En Attente =======   -->

          <% if (commande.length> 0) { %>
          <div class="filter">
            <ul
              class="list-group list-group-horizontal position-relative overflow-auto w-90"
            >
              <li class="list-group-item cardFilter done">
                <img
                  src="https://media.istockphoto.com/vectors/grunge-green-completed-wording-round-rubber-seal-stamp-on-white-vector-id960551208?k=6&m=960551208&s=612x612&w=0&h=GP-BecMBbDTRpLDmsx6G7IdanNnwG9ODl3OEKc_uRhI="
                />
                <div>
                  <h1>Compléter</h1>
                  <h2>
                    <%= commande.filter((c) => (c.etat == "COMPLETE")).length %>
                    commandes
                  </h2>
                </div>
              </li>
              <li class="list-group-item cardFilter pennding activ">
                <img
                  src="https://activerain.com/image_store/uploads/agents/cameronteam/files/PENDING.png"
                />
                <div>
                  <h1>En attente</h1>
                  <h2>
                    <%= commande.filter((c) => (c.etat == "EN_ATTENTE")).length
                    %> commandes
                  </h2>
                </div>
              </li>
              <li class="list-group-item cardFilter canceld">
                <img
                  src="https://i0.wp.com/askthemoneycoach.com/wp-content/uploads/2009/09/bigstock-Cancelled-Stamp-64007296.jpg?fit=500%2C500&ssl=1"
                />
                <div>
                  <h1>Annuler</h1>
                  <h2>
                    <%= commande.filter((c) => (c.etat == "ANNULER")).length %>
                    commandes
                  </h2>
                </div>
              </li>
            </ul>
          </div>
          <table class="table caption-top">
            <caption>
              List of Commandes
            </caption>
            <thead>
              <tr>
                <th scope="col">
                  <div style="display: flex; align-items: center">
                    <i
                      style="
                        margin-right: 15px;
                        color: #6d6de6;
                        font-size: 12px;
                      "
                      class="bi bi-list-nested"
                    ></i
                    >Commande Id
                  </div>
                </th>
                <th scope="col">
                  <div style="display: flex; align-items: center">
                    <i
                      style="
                        margin-right: 15px;
                        color: #f29a62;
                        font-size: 12px;
                      "
                      class="bi bi-calendar-fill"
                    ></i
                    >date
                  </div>
                </th>
                <th scope="col">
                  <div style="display: flex; align-items: center">
                    <i
                      style="
                        margin-right: 15px;
                        color: #ff7575;
                        font-size: 12px;
                      "
                      class="bi bi-pin-map-fill"
                    ></i
                    >Adresse
                  </div>
                </th>
                <th scope="col">
                  <div style="display: flex; align-items: center">
                    <i
                      style="
                        margin-right: 15px;
                        color: #3d7cda;
                        font-size: 12px;
                      "
                      class="bi bi-currency-exchange"
                    ></i
                    >prix
                  </div>
                </th>
                <th scope="col">
                  <div style="display: flex; align-items: center">
                    <i
                      style="
                        margin-right: 15px;
                        color: #56e164;
                        font-size: 12px;
                      "
                      class="bi bi-wifi"
                    ></i
                    >Etats
                  </div>
                </th>

              </tr>
            </thead>
            <tbody>
              <% for (let i = 0 ; i < commande.length ; i++) {%>
      
                <tr  data-status="<%= commande[i].etat %>"  data-id="<%=commande[i].id%>" >
                  <th># <%= commande[i].id %></th>
                  <td>
                    <%= commande[i].livraison.toString().split('00')[0].split(" ").slice(1).join(" ") %>
                  </td>
                  <td><%= commande[i].adresse %></td>
                  <td>
                    $ <%= commande[i].prix.toLocaleString('en-US', {
                    minimumFractionDigits: 2 }) %>
                  </td>
                  <td>
                    <% if (commande[i].etat == "ANNULER") { %>
                    <i
                      style="margin-right: 5px; color: salmon; font-size: 8px"
                      class="bi bi-x-circle-fill"
                    ></i>
                    <% }%> <% if (commande[i].etat == "COMPLETE") {%>
                    <i
                      style="
                        margin-right: 5px;
                        color: rgb(97, 244, 131);
                        font-size: 8px;
                      "
                      class="bi bi-check-circle-fill"
                    ></i
                    ><% }%> <% if (commande[i].etat == "EN_ATTENTE") {%>
                    <i
                      style="
                        margin-right: 5px;
                        color: #f29a62;
                        font-size: 8px;
                      "
                      class="bi bi-hourglass-split"
                    ></i
                    ><% }%> <%= commande[i].etat %>
                  </td>
  
                </tr>
        

              <% } %>
            </tbody>
          </table>
       
       
          <% } else { %>
          <div class="bag-empty">
            <i class="bi bi-bag"></i>
            <h1>Sac de commandes est vide</h1>
            <p>en attendant que quelqu’un achète chez nous :)</p>
          </div>
          <%} %>
          <!-- ======= End Bag ======= -->
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script src="/script/commande.js"></script>
  </body>
</html>
