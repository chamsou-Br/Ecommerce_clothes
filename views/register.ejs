  <body>
        <!-- ======= login ======= -->
          <div class="parent clearfix">
    <div class="bg-illustration">

      <div class="burger-btn">
        <span></span>
        <span></span>
        <span></span>
      </div>

    </div>
    
    <div class="login">
      <div class="container">
        <h1>Registrez-vous pour accéder à<br />votre compte</h1>

        <% if (message) { %>
          <h2 class="messageError" ><%= message %></h2>
        <% } %>
        <div class="login-form">
          <form method="post" action="/register">
            <input required class="info" type="text" name="firstName" placeholder="Nom">
            <input required class="info" type="text" name="lastName" placeholder="Prenom">
            <input required class="info" type="text" name="address" placeholder="Adresse">
            <input required class="info" type="number" name="phone" placeholder="N télephone">
            <input required class="info" type="email" name="email" placeholder="E-mail Address">
            <input required class="info" type="password" name="password" placeholder="Mot de passe">

            <button style="margin-top: 20px;" type="submit">Register</button>
            <div class="forget-password">
                <span>Mot de passe oublié ?</span>
            </div>
            <a href="/login">
            <div class="navigation">
                <span>Vous avez un compte ?</span>
              </div>
            </a>

          </form>
        </div>
    
      </div>
      </div>
  </div>

        <!-- ======= End login ======= -->


