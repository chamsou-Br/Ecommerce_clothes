  <body>
        <!-- ======= Navbar ======= -->
        <%- include("components/nav") %>
        <!-- ======= End navbar ======= -->


    <!-- ======= Profile ======= -->
    <div class="profile">
            <div class="imgContainer">
                <div class="profile-img">
                    <img src="<%= user.picture ? user.picture : 'https://www.pngitem.com/pimgs/m/150-1503945_transparent-user-png-default-user-image-png-png.png' %>" />
                    <form id="upload-form" action="/profile/upload" method="POST" enctype="multipart/form-data">
                      <i class="bi bi-camera"></i>
                      <input id="uplaod-picture" type="file" name="picture" style="display: none;" >
                    </form>
                  </div>

                
                
            </div>
            <form method="post" action="/profile"  class="col-lg-8 row profile-info" >

            <div class="col-md-6 form-group">
                <input  type="text" name="lastName" value="<%= user.nom %>" class="form-control" id="name" placeholder="nom " >
            </div>
            <div class="col-md-6 form-group">
                <input type="text"   name="firstName" value="<%= user.prenom %>" class="form-control" id="name" placeholder="prenom" >
            </div>
            <div class="col-md-6 form-group ">
                <input type="text"  name="newEmail" value="<%= user.email %>" class="form-control" id="name" placeholder="email" >
                <input type="hidden"  name="email" value="<%= user.email %>" class="form-control" id="name" placeholder="email" >
            </div>
            <div class="col-md-6 form-group">
                <input type="number"  name="phone" value="<%= user.telephone %>" class="form-control" id="name" placeholder="nemuro de portable" >
            </div>
            <div class="col-md-6 form-group">
                <input type="text"  name="address" value="<%= user.adresse %>" class="form-control" id="name" placeholder="adress" >
            </div>
            <div class="col-md-6 form-group">
            <button style="margin: auto;" class="submit"   type="submit">Sauvgarder</button>
            </div>
            </form>
    </div>
    <!-- ======= End Profile ======= -->
    
    <!-- ======= Footer ======= -->
    <%- include('components/footer') %>
    <!-- ======= End Footer ======= -->



        
